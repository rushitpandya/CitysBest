<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">
        <EditText android:id="@+id/v_edit_offer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:hint="Offer Name"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">
        <EditText android:id="@+id/v_edit_offer_oldprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:hint="Offer Old Price"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp">
        <EditText android:id="@+id/v_edit_offer_newprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:hint="Offer New Price"
            />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Validity of Offer"
        android:textSize="18dip"
        android:paddingLeft="10px"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        />
    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="100dip"></DatePicker>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a Offer Image"
        android:textSize="18dip"
        android:paddingLeft="10px"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        />
    <ImageView
        android:id="@+id/v_edit_offer_image"
        android:layout_width="wrap_content"
        android:layout_height="100dip"
        android:layout_gravity="center_horizontal"
        android:padding="60px"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/v_add_new_product_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:padding="12dp"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:textColor="@color/white"
        android:layout_weight="0"
        android:onClick="EditOffer"/>



</LinearLayout>