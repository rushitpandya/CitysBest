<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
      >
        <TableRow>
            <TextView
                android:text="Store Name"
                android:padding="3dip"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/store_name1"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"  />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Store Address"
                android:textColor="@color/colorPrimary"
                android:padding="3dip"
                android:textStyle="normal|bold" />
            <TextView
                android:id="@+id/store_address1"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Store Timings"
                android:padding="3dip"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal|bold" />
            <TextView
                android:id="@+id/store_timings1"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip" />
        </TableRow>

        <TableRow>
            <TextView
                android:text="Store Contact Info"
                android:padding="3dip"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal|bold" />
            <TextView
                android:id="@+id/store_contact_no1"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Category"
                android:padding="3dip"
                android:textColor="@color/colorPrimary"
                android:textStyle="normal|bold" />
            <TextView
                android:id="@+id/categoryname1"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dip"  />
        </TableRow>
    </TableLayout>



    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill"
        android:background="@color/jumbo"
        app:tabTextColor="@color/white"
        android:layout_marginTop="20dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"  />
</LinearLayout>